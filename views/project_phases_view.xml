<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="project_phases_form">
            <field name="name">project.phases.form</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <form string="Project Phases">
                    <sheet>
                        <group>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="method_name"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                            <field name="deadline"/>
                        </group>
                        <notebook attrs="{'invisible':[('method_name','=',False)]}">
                            <page string="SCRUM" attrs="{'invisible': [('method_name', '!=', 'scrum')]}">
                                <form>
                                    <header>
                                        <field name="scrum_method" widget="statusbar"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Waterfall" attrs="{'invisible': [('method_name', '!=', 'waterfall')]}">
                                <form>
                                    <header>
                                        <field name="waterfall_method" widget="statusbar"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Agile" attrs="{'invisible': [('method_name', '!=', 'agile')]}">
                                <form>
                                    <header>
                                        <field name="agile_method" widget="statusbar"/>
                                    </header>
                                    <group>
                                    </group>
                                </form>
                            </page>
                            <page string="PRINCE2" attrs="{'invisible': [('method_name', '!=', 'prince')]}">
                                <form>
                                    <header>
                                        <field name="prince_method" widget="statusbar"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Kanban" attrs="{'invisible': [('method_name', '!=', 'kanban')]}">
                                <form>
                                    <header>
                                        <field name="kanban_method" widget="statusbar"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="project_phases_tree">
            <field name="name">project.phases.tree</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <tree string="Project Phases">
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                    <field name="deadline"/>
                </tree>
            </field>
        </record>
        <record id="project_phases_kanban" model="ir.ui.view">
            <field name="name">project.phases.kanban</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                                <div class="row">
                                    <div class="col-12">
                                        <strong><field name="method_name" string="Project Methodology"/></strong>
                                    </div>
                                    <div class="col-12">
                                        <field name="project_id" string="Project name"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="project_phases_inherit" model="ir.ui.view">
            <field name="name">project.phase.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="agile_method"/>
                </xpath>
            </field>
        </record>

        <record id="action_project_phases" model="ir.actions.act_window">
            <field name="name">Project Phases</field>
            <field name="res_model">project.phases</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="target">main</field>
        </record>
        <menuitem id="project_phases_menu" name="Project Phases" parent="project.menu_main_pm" action="action_project_phases" sequence="10"/>
    </data>
</odoo>