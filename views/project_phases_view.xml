<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="project_phases_form">
            <field name="name">project.phases.form</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <form string="Project Phases">
                    <sheet>
                        <group>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                            <field name="deadline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="project_phases_tree">
            <field name="name">project.phases.tree</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <tree string="Project Phases">
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                    <field name="deadline"/>
                </tree>
            </field>
        </record>
        <record id="project_phase_task" model="ir.ui.view">
            <field name="name">project.phase.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name=""
                </field>
            </field>

        </record>
        <record id="action_project_phases" model="ir.actions.act_window">
            <field name="name">Project Phases</field>
            <field name="res_model">project.phases</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="target">main</field>
        </record>

        <menuitem id="project_phases_menu" name="Project Phases" parent="project.menu_main_pm" action="action_project_phases" sequence="10"/>
    </data>
</odoo>