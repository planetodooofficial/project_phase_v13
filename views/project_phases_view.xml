<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="project_phases_form">
            <field name="name">project.phases.form</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <form string="Project Phases">
                    <sheet>
                        <group>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="method_name"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                            <field name="deadline"/>
                        </group>
                        <notebook attrs="{'invisible':[('method_name','=',False)]}">
                            <page string="SCRUM" attrs="{'invisible': [('method_name', '!=', 'scrum')]}">
                                <form>
                                    <header>
                                        <field name="scrum_method" options="{'clickable': '1'}" widget="statusbar" />
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Waterfall" attrs="{'invisible': [('method_name', '!=', 'waterfall')]}">
                                <form>
                                    <header>
                                        <field name="waterfall_method" widget="statusbar" options="{'clickable': '1'}"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Agile" attrs="{'invisible': [('method_name', '!=', 'agile')]}">
                                <form>
                                    <header>
                                        <field name="agile_method" widget="statusbar" options="{'clickable': '1'}"/>
                                    </header>
                                    <group>
                                    </group>
                                </form>
                            </page>
                            <page string="PRINCE2" attrs="{'invisible': [('method_name', '!=', 'prince')]}">
                                <form>
                                    <header>
                                        <field name="prince_method" widget="statusbar" options="{'clickable': '1'}"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                            <page string="Kanban" attrs="{'invisible': [('method_name', '!=', 'kanban')]}">
                                <form>
                                    <header>
                                        <field name="kanban_method" options="{'clickable': '1'}" widget="statusbar"/>
                                    </header>
                                    <group>

                                    </group>
                                </form>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="project_phases_tree">
            <field name="name">project.phases.tree</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <tree string="Project Phases">
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                    <field name="deadline"/>
                    <field name="method_name"/>
                    <field name="phases" string="Project Phase"/>
                </tree>
            </field>
        </record>
        <record id="project_phases_kanban" model="ir.ui.view">
            <field name="name">project.phases.kanban</field>
            <field name="model">project.phases</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">
                    <field name="task_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                                <div class="row">
                                    <div class="col-12">
                                        <strong><span>Project Phase: </span></strong>
                                        <strong><field name="waterfall_method" string="Project Phase" attrs="{'invisible': [('method_name', '!=', 'waterfall')]}" /></strong>
                                        <strong><field name="agile_method" string="Project Phase"
                                                       attrs="{'invisible': [('method_name', '!=', 'agile')]}"/></strong>
                                        <strong><field name="prince_method" string="Project Phase"
                                                       attrs="{'invisible': [('method_name', '!=', 'prince')]}"/></strong>
                                        <strong><field name="scrum_method" string="Project Phase"
                                                       attrs="{'invisible': [('method_name', '!=', 'scrum')]}"/></strong>
                                        <strong><field name="kanban_method" string="Project Phase"
                                                       attrs="{'invisible': [('method_name', '!=', 'kanban')]}"/></strong>
                                    </div>
                                    <div class="col-12">
                                        <strong><span>Project Methodology: </span></strong>
                                        <field name="method_name" string="Project Methodology"/>
                                    </div>
                                    <div class="col-12">
                                        <span>Project Name: </span>
                                        <field name="project_id" string="Project name"/>
                                    </div>
                                </div>
                                <div class="o_project_kanban_boxes">
                                    <a class="o_project_kanban_box" name="%(project.act_project_project_2_project_task_all)d" type="action">
                                        <div>
                                            <span class="o_value"><t t-esc="record.task_count.value"/></span>
                                            <span class="o_label">Tasks</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_project_phases" model="ir.actions.act_window">
            <field name="name">Project Phases</field>
            <field name="res_model">project.phases</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="target">main</field>
        </record>
        <menuitem id="project_phases_menu" name="Project Phases" parent="project.menu_main_pm" action="action_project_phases" sequence="10"/>
    </data>
</odoo>