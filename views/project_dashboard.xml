<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="project_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">project.dashboard.kanban</field>
            <field name="model">project.dashboard</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_gst_kanban" create="0">
                    <field name="method_name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card_header" >
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <center><div><field name="method_name" attrs="{'invisible': [('method_name', '!=', 'kanban'),('method_name', '!=', 'prince'),('method_name', '!=', 'blank')]}" /></div></center>
                                        <a name="%(project.open_create_project)d" type="action">
                                            <center>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/agile.jpg" attrs="{'invisible': [('method_name', '!=', 'agile')]}"/>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/waterfall.jpg" attrs="{'invisible': [('method_name', '!=', 'waterfall')]}"/>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/prince2.png" attrs="{'invisible': [('method_name', '!=', 'prince')]}"/>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/kanban.png" attrs="{'invisible': [('method_name', '!=', 'kanban')]}"/>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/scrum.jpg" attrs="{'invisible': [('method_name', '!=', 'scrum')]}"/>
                                                <img width="100%" height="100%" src="/project_phases_v13/static/src/img/blank.jpg" attrs="{'invisible': [('method_name', '!=', 'blank')]}"/>
                                            </center>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_project_dashboard" model="ir.actions.act_window">
            <field name="name">Project Dashboard</field>
            <field name="res_model">project.dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban</field>
        </record>
        <menuitem id="project_dashboard_menu" name="Project Dashboard" parent="project.menu_main_pm" action="action_project_dashboard" sequence="11"/>
    </data>
</odoo>