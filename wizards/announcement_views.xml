<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="announcement_form" model="ir.ui.view">
            <field name="name">announcement.form.data</field>
            <field name="model">announcement.panel</field>
            <field name="arch" type="xml">
                <form string="Announcements" on_create="project_phases_v13.announcement_panel_action">
                    <group>
                        <field name = "announce_title"/>
                        <field name = "announce_description"/>
                        <field name = "project_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="announcement_tree" model="ir.ui.view">
            <field name="name">announcement.tree.data</field>
            <field name="model">announcement.panel</field>
            <field name="arch" type="xml">
                <tree string="Announcements">
                    <field name = "announce_title"/>
                    <field name = "announce_description"/>
                    <field name = "project_id"/>
                </tree>
            </field>
        </record>
        <record id="announcement_action" model="ir.actions.act_window">
            <field name="name">Announcements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">announcement.panel</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="announcement_form" />
            <field name="target">new</field>
        </record>
        <act_window id="announcement_panel_action"
                    name="Create Announcement Panel"
                    binding_model="project.task"
                    res_model="announcement.panel"
                    domain="[('project_id','=', active_id)]"
                    view_mode="form"
                    target="new"
        />
    </data>
</odoo>