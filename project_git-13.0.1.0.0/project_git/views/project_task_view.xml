<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="git_view_task_form2_inherited" model="ir.ui.view">
        <field name="name">project.git.project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">

                <button name="open_commits"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-share-alt">

                    <field string="Commits" name="commits_count" widget="statinfo" help="Commits"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
